/* pages/index/message/message.wxss */
.main{
  width: 750rpx;
	height: 132rpx;
	background-color: #ffffff;

}
.main .main_icon{
  width: 28rpx;
	height: 32rpx;
  float: left;
  margin-top: 50rpx;
  margin-left: 24rpx;
  border-top: 1rpx solid #f5f5f5;
}
.main .main_item{
  width: auto;
  height: 100%;
  float: left;
  padding-left: 30rpx;
}
.main .main_item .service{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-family: PingFang-SC-Medium;
	font-size: 32rpx;
	letter-spacing: 1px;
	color: #1f1f1f;
  margin-top: 20rpx;
}
.main .main_item .infomation{
  width: auto;
  height: 50rpx;
  line-height: 50rpx;
  font-family: PingFang-SC-Medium;
	font-size: 26rpx;
	letter-spacing: 1px;
	color: #cccccc;
  white-space: nowrap;
  text-overflow: hidden;
  overflow: hidden;
}
.main .icon_next{
  width: 17rpx;
	height: 30rpx;
  float: right;
  margin-right: 24rpx;
  margin-top: 51rpx;
}
.message{
   width: 30rpx;
  height: 30rpx;
  background-color: orangered;
  color: white;
  text-align: center;
  line-height: 30rpx;
  margin-top: 46rpx;
  float: right;
  margin-right: 15rpx;
  border-radius: 100%;
}