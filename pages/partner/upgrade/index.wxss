/* pages/partner/upgrade/index.wxss */
.container {
  padding-top: 20rpx;
}
.upgrade_li {
  width: 700rpx;
  margin: 0 auto;
  background: #ffffff;
  padding-bottom: 120rpx;
  border-radius: 6rpx;
  position: relative;
  margin-bottom: 70rpx;
}
.upgrade_li_top {
  width: 650rpx;
  line-height: 88rpx;
  height: 88rpx;
  margin: 0 auto;
  border-bottom: 1px solid #f0f0f0;
  text-align: center;
  font-size: 36rpx;
  color: #1f1f1f;
}
.upgrade_li_main {
   width: 650rpx;
  margin: 0 auto;
}
.upgrade_li_main_li {
  margin-top: 20rpx;
}
.upgrade_li_main_li_tit {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  color: #1f1f1f;
  display: flex;
  align-items: center;
}
.upgrade_li_main_li_tit text {
  display: inline-block;
  width: 18rpx;
  height: 18rpx;
  background-color: #f99b68;
  border-radius: 50%;
  margin-right: 20rpx;
}
.upgrade_li_main_li_con {
  font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 36rpx;
	letter-spacing: 0px;
	color: #666666;
}
.upgrade_li_btn {
  position: absolute;
  width: 260rpx;
	height: 60rpx;
	background-color: #fe593c;
	box-shadow: -2rpx 4rpx 8rpx 0px 
		rgba(237, 46, 36, 0.75);
	border-radius: 29px;
  bottom: -30rpx;
  color: #ffffff;
  font-size: 28rpx;
  text-align: center;
  line-height: 60rpx;
  left: 215rpx;
}