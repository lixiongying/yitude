/* pages/partner/coshop/index.wxss */
@import "../applying/index";
.container {
  border-top: 1px solid #cccccc;
}
.shop_top {
  width: 100%;
  height: 92rpx;
  background: #ffffff;
  padding-top: 28rpx;
  border-bottom: 12rpx solid #f0f0f0;
}
.shop_top_ipt {
  float: left;
  width: 620rpx;
  height: 64rpx;
  line-height: 64rpx;
  background-color: #f8f8f8;
	border-radius: 32rpx;
	border: solid 1px #cccccc;
  box-sizing: border-box;
  margin-left: 25rpx;
}
.shop_top_ipt input {
  box-sizing: border-box;
  height: 100%;
  width: 100%;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #1f1f1f;
  line-height: 64rpx;  
}
.shop_top_btn {
  float: left;
  width: 100rpx;
  height: 64rpx;
  font-size: 32rpx;
	line-height: 64rpx;
	letter-spacing: 2px;
	color: #ec6d56;
  text-align: center;
}
/* 店铺列表样式 */
.shop_list_li {
  width: 100%;
  height: 130rpx;
  background: #ffffff;
  padding: 26rpx 25rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #f0f0f0;
}
.shop_list_li_img {
  float: left;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}
.shop_list_li_img image{
  width: 100%;
  height: 100%;
}
.shop_list_li_name {
  float: left;
  height: 80rpx;
  line-height: 80rpx;
  width: 440rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 32rpx;
  color: #1f1f1f;
  margin-left: 25rpx;
}
.shop_list_li_next {
  width: 120rpx;
  height: 54rpx;
  line-height: 54rpx;
  float: right;
  margin-top: 15rpx;
  margin-right: 5rpx;
  text-align: center;
  font-size: 28rpx;
  color: #ffffff;
  background-color: #6c45d5;
  border-radius: 27rpx;
}
.msg {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  color: #787878;
  text-align: center;
}