/* pages/partner/coupon/index.wxss */
.coupon_box {
  padding-top: 25rpx;
  width: 100%;
}
.coupon_box_li {
  width: 700rpx;
  margin: 0 auto 25rpx;
  background: #ffffff;
  position: relative;
  height: 270rpx;
  box-shadow: 0px 2rpx 8rpx 0px 
		rgba(204, 204, 204, 0.75);
}
.coupon_box_li_main {
  position: absolute;
  width: 100%;
  height: 270rpx;
  left: 0;
  top: 0;
}
.coupon_box_li_top_bg {
  width: 100%;
  position: absolute;
  height: 100%;
  left: 0;
  top: 0;
}
.coupon_box_li_top_bg image {
  width: 100%;
  height: 100%;
}
.coupon_box_li_top {
  width: 100%;
  height: 132rpx;
  position: relative;
}
.coupon_box_li_top_con_l {
  float: left;
  width: 210rpx;
  height: 132rpx;
}
.coupon_box_li_top_con_l_num {
  font-size: 92rpx;
  color: #ffffff;
  position: relative;
  letter-spacing: -6rpx;
  float: left;
  padding-left: 30rpx;
  height: 132rpx;
  line-height: 132rpx;

}
.coupon_box_li_top_con_l_num text {
  position: absolute;
  width: 20rpx;
  height: 25rpx;
  line-height: 25rpx;
  top: 20rpx;
  right: -25rpx;
  font-size: 32rpx;
  color:#ffffff;
}
.coupon_box_li_top_con_c {
  float: left;
  width: 300rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  flex-direction: column;
}
.coupon_box_li_top_con_c_tit {
  height: 48rpx;
  font-size: 32rpx;
  color: #ffffff;
  letter-spacing: 2rpx;
}
.coupon_box_li_top_con_c_msg {
  height: 48rpx;
  font-size: 26rpx;
  color: #ffffff;
  letter-spacing: 2rpx;
}
.share_btn {
  position: absolute;
  width: 130rpx;
	height: 60rpx;
  top: 20rpx;
  right: 25rpx;
}
.share_btn button {
  width: 130rpx;
	height: 60rpx;
	background-color: #fe593c;
	box-shadow: -2rpx 4rpx 8rpx 0px 
		rgba(237, 46, 36, 0.75);
	border-radius: 30rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #ffffff;
  padding: 0;
}

.coupon_box_li_con {
  width: 100%;
  height: 148rpx;
  padding-top: 16rpx;
  box-sizing: border-box;
  padding-left: 25rpx;
}
.coupon_box_li_con_li {
  display: flex;
  align-items: center;
  height: 50rpx;
  font-size: 24rpx;
  color: #666666;
}
.coupon_box_li_con_li image {
  width: 26rpx;
  height: 26rpx;
  margin-right: 15rpx;
}