/* pages/myself/setting/setting.wxss */
.profile{
  width: 750rpx;
	height: 200rpx;
	background-color: #ffffff;
	border: solid 2rpx #ffffff;
}
.profile .headimg{
  width: 124rpx;
	height: 124rpx;
  border-radius: 100%;
  margin-top: 39rpx;
  margin-left: 32rpx;
  float: left;
}
.profile .headitem{
  max-width: 400rpx;
  height: 200rpx;
  float: left
}
.profile .headitem .headid,.headname{
  max-width: 400rpx;
  height: 40rpx;
  font-family: PingFang-SC-Medium;
	font-size: 32rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 40rpx;
	letter-spacing: 0px;
	color: #1f1f1f;
  text-align: left;
  margin-left: 24rpx;
  margin-top: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.headname{
  margin-top: 15rpx;
}
.erweima{
  float: right;
  width: 36rpx;
	height: 36rpx;
  margin-top: 75rpx;
   margin-right: 15rpx;
}
.profile .icon_next{
  width: 17rpx;
	height: 27rpx;
   float: right;
   margin-top: 80rpx;
   margin-right: 24rpx;

}
.content{
  width: 100%;
  height: auto;
margin-top: 20rpx;
}
.main{
  width: 750rpx;
	height: 102rpx;
	background-color: #ffffff;
  border-bottom: 1px solid #f5f5f5;
}
.main:last-child{
  border: none;
}
.main .main_icon{
  width: 36rpx;
	height: 37rpx;
  float: left;
  margin-left: 24rpx;
  margin-top: 33rpx;
}
.main .main_name{
  max-width: 535rpx;
	height: 102rpx;
  float: left;
  margin-left: 24rpx;
  line-height: 102rpx;
  font-family: PingFang-SC-Medium;
	font-size: 32rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #1f1f1f;

}
.main  .icon_next{
  width: 16rpx;
	height: 27rpx;
  float: right;
  margin-top: 40rpx;
  margin-right: 24rpx;
}