.main{
  width: 654rpx;
	height: 682rpx;
	background-color: #ffffff;
	border-radius: 6px 6px 0px 0px;
	border: solid 2px #ffffff;
  z-index: 100;
  margin: 0 auto;
  margin-top: 48rpx;
}
.main .main_info{
  width: 654rpx;
	height: 162rpx;
}
.main .main_info .infoimg{
  width: 102rpx;
	height: 102rpx;
  float: left;
  margin-left: 24rpx;
  margin-top: 30rpx;
  border-radius: 100%;
}
.main .main_info .info{
  max-width: 502rpx;
	height: 162rpx;
  float: left;
  margin-left: 24rpx;
}
.main .main_info .info .name,.info_id{
  max-width:100%;
	height: 50rpx;
	font-family: PingFang-SC-Medium;
	font-size: 32rpx;
	line-height: 50rpx;
	letter-spacing: 0px;
	color: #1f1f1f;
}
.main .main_info .info .name{
  margin-top: 30rpx;
}
.main_ing{
	width: 654rpx;
	height: 420rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.main_ing image{
width: 352rpx;
	height: 352rpx;
}
.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  background: black;
  opacity: 0.4;
  z-index: -1
}