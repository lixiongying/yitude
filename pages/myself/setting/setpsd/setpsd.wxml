<view class='container'>
    <view class='main'>
      
       <view class='f_li' style='margin-top: 30rpx;'>
         <view class='li_one'>设置密码: </view>
         <view class='f_li_one'>
            <input class='li_two' bindinput='getpsd' type='number' password placeholder='请输入密码（密码长度6个字符）' placeholder-style='font-size: 32rpx;color: #cccccc;' maxlength='6'></input>
        </view>
       </view>
        <view class='f_li'>
         <view class='li_one'>确认密码: </view>
         <view class='f_li_one'>
             <input class='li_two'  bindinput='surepsd' type='number' password placeholder='请再次输入设置密码' placeholder-style='font-size: 32rpx;color: #cccccc;' maxlength='6'></input>
         </view>
       </view> 
       
    </view> 

    <view class='mains'>

       <view class='f_li' style=''>
         <view class='f_li_one'>
           <input class='li_two' disabled='disabled' type='number' value="{{card_phone}}" bindinput='getpnone' placeholder='请输入您的手机号码' placeholder-style='font-size: 32rpx;color: #cccccc;'></input>
         </view>
         <button class='li_three' bindgetphonenumber='getPhoneNumber' open-type="getPhoneNumber">获取手机号</button>
       </view>
        <view class='f_li'>
         <view class='f_li_one'>
            <input class='li_two' type='number' bindinput='getcode' placeholder='请输入短信验证码' placeholder-style='font-size: 32rpx;color: #cccccc;'></input>
          </view>
         <view class='li_three' bindtap='getcodenumber'>获取验证码</view>
       </view>
      
    </view> 

    <view class='savebtn' bindtap='save'>确认</view>
</view>
