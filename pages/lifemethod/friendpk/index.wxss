/* pages/goods/index.wxss */

.container {
  width: 100%;
  height: 100%;
}

.nav {
  width: 100%;
  height: 88rpx;
  border-bottom: 20rpx solid #f0f0f0;
  position: absolute;
  left: 0;
  top: 0;
  border-top: 1px solid #f0f0f0;
}

.scrollbar_main {
  width: auto;
  height: 82rpx;
  overflow: hidden;
  white-space: nowrap;
}

.tit_icon {
  width: 100%;
  height: 88rpx;
}

.tit_icon_image {
  float: left;
  width: 14rpx;
  height: 18rpx;
  margin-top: 35rpx;
}

.tit_icon_image image {
  float: left;
  width: 100%;
  height: 100%;
}

.tit_icon_text {
  float: left;
  margin-left: 20rpx;
  font-size: 30rpx;
  line-height: 88rpx;
  height: 88rpx;
  color: #202020;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.swiper-tab {
  width: auto;
  text-align: center;
  line-height: 80rpx;
  background: #fff;
}

.swiper-tab-list {
  font-size: 28rpx;
  display: inline-block;
  color: #b3b3b3;
  position: relative;
  width: 50%;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
}

.swiper-tab-list text {
  display: inline-block;
  height: 100%;
  box-sizing: border-box;
  border-bottom: 1px solid #fff;
  color: #1f1f1f;
}

.on text {
  color: #ec6d56;
  border-bottom: 1px solid #ec6d56;
}

.main {
  width: 100%;
  height: 100%;
  background: #fff;
  box-sizing: border-box;
  position: absolute;
  top: 0;
  left: 0;
}

.friend_box_li {
  width: 100%;
  height: 132rpx;
  border-bottom: 1px solid #f0f0f0;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.friend_box_li_one {
  width: 80rpx;
  height: 40rpx;
  text-align: center;
  font-size: 32rpx;
  color: #1f1f1f;
  margin-right: 20rpx;
}

.friend_box_li_one image {
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  margin-top: 4rpx;
}

.friend_box_li_pic {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.friend_box_li_pic image {
  width: 100%;
  height: 100%;
}

.friend_box_li_name {
  width: 400rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 28rpx;
  color: #1f1f1f;
  margin-right: 10rpx;
}

.friend_box_li_time {
  width: 120rpx;
  font-size: 26rpx;
  color: #666;
}
.share_img {
  position: fixed;
  bottom: 150rpx;
  right: 30rpx;
  width: 120rpx;
  height: 120rpx;
}
.share_img image {
  width: 100%;
  height: 100%;
}
.share_model {
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}
.share_model_hide {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}
button::after {
  border: none;
}
button {
  background-color: #fff;
}
.share_model_con {
  width: 100%;
  height: 200rpx;
  position: absolute;
  bottom: 0;
  left:0 ;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #ffffff;
}
.share_model_con button {
  width: 20%;
}
.share_model_con_li {
  width: 100%;
}
.share_model_con_li_icon {
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto;
}
.share_model_con_li_icon image {
  width: 100%;
  height: 100%;
}
.share_model_con_li_text {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #1f1f1f;
}