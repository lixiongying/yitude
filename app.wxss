/* 支付弹窗 */

.payfor {
  width: 100%;
  height: 380rpx;
  background-color: white;
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 100;
}

.payfor .pay_method {
  width: 100%;
  
  height: 100rpx;
  line-height: 100rpx;
  color: #1f1f1f;
  font-size: 32rpx;
  background-color: #f8f8f8;
  text-align: center;
}

.payfor .wechat_pay {
  width: 100%;
  height: 140rpx;
  color: #2a2a2a;
  line-height: 140rpx;
  font-size: 28rpx;
  text-align: center;
  overflow: hidden;
}

.payfor .wechat_pay image {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}

.payfor .extra_pay {
  width: 100%;
  height: 140rpx;
  color: #2a2a2a;
  line-height: 140rpx;
  font-size: 28rpx;
  text-align: center;
  overflow: hidden;
  position: relative;
}

.payfor .extra_nopay {
  color: #ccc;
}

.payfor .extramoney {
  color: #ccc;
  font-size: 24rpx;
  position: absolute;
  left: 460rpx;
  top: 60rpx;
  width: auto;
  height: 30rpx;
  line-height: 30rpx;
}

.payfor .extra_pay image {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}
