/**app.wxss**/

page{
  background: #f0f0f0;
  font-size: 24rpx;
}
.container{
  width:100%;
  height: 100%;
  /* background: #fff; */
  color:#202020;
}
.none{
  display: none;
}
.clear::after {
  content: "";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
swiper-item {
  background: #f0f0f0;
}
.mask{
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background: black;
  opacity: 0.5;
z-index: 1;
}

.relay{
  width: 550rpx;
	height: 651rpx;
	background-color: #ffffff;
 overflow: hidden;
  position: fixed;
  top: 50%;
  left: 50%;
  margin-left: -275rpx;
  margin-top: -325rpx;
  z-index: 1000;
}
.relay .re_pic{
  width: 100%;
  height: 325rpx;
  
}
.re_gold{
  width:100%;
	height: 60rpx;
	font-family: PingFang-SC-Medium;
	font-size: 36rpx;
	font-weight: normal;
